@* Dark Theme for whole site *@
@code 
{
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Background = Colors.Shades.Black,
			Surface = "#121212",
			TextPrimary = Colors.Shades.White
        }
    };
}
@* end dark mode theme *@


