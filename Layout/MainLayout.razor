@* MudBlazor initialization *@
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @* Top persistent bar *@
    <MudAppBar Elevation="0" Color="Color.Transparent" Style="background-color: #000000;" Fixed="true">
        <MudLink Href="" Underline="Underline.None">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudImage Src="images/ScreenGrabLogo.png" Alt="ScreenGrab Logo" Height="40" Class="responsive-img" Style="max-height: 40px;" />
            </MudStack>
        </MudLink>
        <MudSpacer />
        @* Desktop email - hidden on mobile *@
        <MudLink Href="mailto:screengrab.dev@outlook.com" Underline="Underline.Hover" Class="hide-on-mobile">
            <MudText Align="Align.Right" Typo="Typo.body1" Class="mr-4" Style="color: #3d3fb8">
                Bug reports or feature suggestions: screengrab.dev@outlook.com
            </MudText>
        </MudLink>
        @* Mobile email icon - shown on mobile *@
        <MudIconButton Href="mailto:screengrab.dev@outlook.com" Icon="@Icons.Material.Filled.Email" Color="Color.Primary" Class="show-on-mobile" Style="color: #3d3fb8" />
    </MudAppBar>

    @* Main content *@
    <MudMainContent Class="pt-16">
        @* Navigation buttons - responsive container *@
        <div class="nav-buttons">
            <MudButton Variant="Variant.Outlined" Style="color: #3d3fb8" Color="Color.Dark" Href="About">
                About
            </MudButton>
            <MudButton Variant="Variant.Outlined" Style="color: #3d3fb8" Color="Color.Dark" Href="Download">
                Download
            </MudButton>
            <MudButton Variant="Variant.Outlined" Style="color: #3d3fb8" Color="Color.Dark" Href="Support">
                Support ScreenGrab
            </MudButton>
        </div>

        @Body
    </MudMainContent>
</MudLayout>

@code
{
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Background = Colors.Shades.Black,
            Surface = "#121212",
            TextPrimary = Colors.Shades.White,
            TextSecondary = Colors.Shades.White
        }
    };
}



