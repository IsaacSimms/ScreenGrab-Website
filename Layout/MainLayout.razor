@* MudBlazor initialization *@
@inherits LayoutComponentBase

<MudThemeProvider Theme = "_theme" IsDarkMode = "true"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @* top persistent bar *@
    <MudAppBar Elevation="0" Color="Color.Transparent" Style="background-color: #000000;" Fixed="true">
        <MudLink Href="" Underline="Underline.None">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudImage Src="ScreenGrabLogo.png" Alt="ScreenGrab Logo" Height="40" />
            </MudStack>
        </MudLink>
		<MudSpacer />
        <MudLink Href="mailto:screengrab.dev@outlook.com" Underline="Underline.Hover">
            <MudText Align="Align.Right" Typo="Typo.h6" Class="mr-4" Style="color: #3d3fb8 ">
                To report bugs or suggest features, please email screengrab.dev@outlook.com
            </MudText>
        </MudLink>
    </MudAppBar>

    @* main content pt *@
    <MudMainContent Class="pt-16"> 

    @* peristent navigation buttons *@
        @* To About page button *@
        <MudButton Variant="Variant.Outlined" Color="Color.Dark" Style="color: #3d3fb8" Href="about">
            About
        </MudButton>

        @* To Download page button *@
        <MudButton Variant="Variant.Outlined" Color="Color.Dark" Style="color: #3d3fb8" Href="Download">
            Download
        </MudButton>

        @* To Support Screengrab page button *@
        <MudButton Variant="Variant.Outlined" Color="Color.Dark" Style="color: #4a4dc9" Href="Support">
            Support ScreenGrab
        </MudButton>

        @Body
    </MudMainContent>
</MudLayout>
@* end initialization *@


@code 
{
	// Define a dark theme for the application
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Background = Colors.Shades.Black,
			Surface = "#121212",
			TextPrimary = Colors.Shades.White
        }
    };
}



